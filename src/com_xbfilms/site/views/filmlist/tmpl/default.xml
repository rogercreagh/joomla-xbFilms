<?xml version="1.0" encoding="utf-8"?>
<!-- xbFilms site/views/filmlist/default.xml v0.9.4.1 29th April 2021 -->
<metadata>
	<layout title="Film List">
		<message>Displays a list (table) of films. Options enable user search &amp; filtering or to restrict to single category and filter person and tags.</message>
	</layout>
	<fields name="params" addfieldpath="administrator/components/com_xbfilms/models/fields">
<!-- Basic options. -->
		<fieldset name="basic" label="Layout">
			<field name="show_fpiccol" type="radio"
				label="Poster Column"
				description="Show poster column"
				class="btn-group btn-group-yesno btn-small"
				useglobal="true"
				>
				<option value="0" >JHIDE</option>
				<option value="1">JSHOW</option>
			</field>	
	 
	 		<field name="show_fsumcol" type="radio"
				label="Summary Column"
				description="Show summary column"
				class="btn-group btn-group-yesno btn-small"
				useglobal="true"
				>
				<option value="0" >JHIDE</option>
				<option value="1">JSHOW</option>
			</field>	
	 
	 		<field name="show_frevcol" type="list"
				label="Rating &amp; Review Column"
				description="Show rating &amp; reviews column."
				useglobal="true"
				>
				<option value="0" >JHIDE</option>
				<option value="1">Show Average Rating only</option>
				<option value="2">Show Rating and Review Links</option>
			</field>	
			<field name="show_fcat" type="list"
				label="Show Film Category"
				description="If both Category and Tag are hidden the column will be hidden. Links will be to the relevant category list of items view."
				class="btn-group btn-group-yesno"
				useglobal="true"
				>
				<option value="0" >JHIDE</option>
					<option value="1">Show without link</option>
					<option value="2">Show with link</option>
			</field>	
	 		<field name="show_ftags" type="radio"
				label="Show Film Tags"
				description="If both Category and Tag are hidden the the column will be hidden"
				class="btn-group btn-group-yesno"
				useglobal="true"
				>
				<option value="0" >JHIDE</option>
				<option value="1">JSHOW</option>
			</field>	
		</fieldset>
			    
<!-- Search and Filter options. -->
		<fieldset name="filters" label="Filters">
	 		<field name="search_bar" type="radio"
				label="COM_XBFILMS_LIST_SHOW_SEARCH_LBL"
				description="COM_XBFILMS_LIST_SHOW_SEARCH_DESC"
				class="btn-group btn-group-yesno btn-small"
				useglobal="true"
			>
				<option value="0" >JNO</option>
				<option value="1">JYES</option>
			</field>	
			<field
				name="menu_perfilt" type="filmpeople"
				label="XBCULTURE_PEOPLE_U"
				description="COM_XBFILMS_PERFILT_DESC"
				>
				<option value="">COM_XBFILMS_PERFILT_HINT</option>
			</field>
			<field name="menu_prole" type="list"
				default=""
				label="COM_XBFILMS_PROLE_LBL"
				description="COM_XBFILMS_PROLE_DESC"
				showon="menu_perfilt!:"			
			>
	  			<option value="">COM_XBFILMS_PROLE_DEF</option>
				<option value="1">XBCULTURE_CAPDIRECTOR</option>
				<option value="2">XBCULTURE_CAPPRODUCER</option>
				<option value="3">COM_XBFILMS_CHAR_IN</option>
			</field>	
			<field
				name="menu_charfilt" type="characters"
				label="XBCULTURE_CAPCHARACTER"
				description="Only show films featuring a particular character"
				>
				<option value="">COM_XBFILMS_CHARFILT_HINT</option>
			</field>
			<field
				name="menu_category_id" type="category"
				label="XBCULTURE_CAPCATEGORY"
				extension="com_xbfilms"
				description="COM_XBFILMS_CATEGORY_DESC"
				>
					<option value="0">COM_XBFILMS_ALL_CATEGORIES</option>
			</field>
			<field name="menu_subcats" type="radio"
				default=""
				label="COM_XBFILMS_SUBCATS_LBL"
				description="COM_XBFILMS_SUBCATS_DESC"
	  			class="btn-group btn-small radiotop"
	  			showon="menu_category_id!:0"
				>
					<option value="" >Exclude</option>
					<option value="1">Include</option>
			</field>	
			<field
				name="menu_tag" type="tag"
				label="COM_XBFILMS_MENUTAG_LBL"
				description="COM_XBFILMS_MENUTAG_DESC"
				multiple="true"
				mode="nested"
			/>
			<field name="taglogic" type="radio"
				default="0"
				label="COM_XBFILMS_MULTITAG_LBL"
				description="COM_XBFILMS_MULTITAG_DESC"
	  			class="btn-group btn-small radiotop"
	  			showon="menu_tag!:"
			>
				<option value="1" onchange="this.form.submit();">All</option>
				<option value="0" onchange="this.form.submit();">Any</option>
				<option value="2" onchange="this.form.submit();">None</option>
			</field>	
		</fieldset>
		
<!-- Additional page display options (added above the standard Page Display options) -->
		<fieldset name="page-options" label="Page Headings">
			<field name="list_title" type="text" class="inputbox w400" size="40" 
				label="XBCULTURE_PAGETITLE_LBL" description="XBCULTURE_PAGETITLE_DESC"
				default=""  
			/>
			<field name="list_subtitle" type="text" class="inputbox w400" size="160" 
				label="XBCULTURE_PAGESUBTITLE_LBL" description="XBCULTURE_PAGESUBTITLE_DESC"
				default=""
              	showon="list_title!:"
			/>
			<field name="list_headtext" type="textarea" 
				label="XBCULTURE_PAGEHEADER_LBL" description="XBCULTURE_PAGEHEADER_DESC"
				rows="6" cols="40"
				default=""
				filter="raw"
              />       
		</fieldset>
	</fields>

</metadata>