<?xml version="1.0" encoding="utf-8"?>
<!-- xbFilms site/models/forms/filter_filmlist.xml v0.4.3 27th February 2021 -->
<form>
    <fields name="filter" addfieldpath="administrator/components/com_xbfilms/models/fields">
        <field name="search"
            type="text"
            label="COM_CONTENT_FILTER_SEARCH_DESC"
			description="COM_XBFILMS_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        /> 
		<field
			name="perfilt"
			type="filmpeople"
			label="XBCULTURE_PERSON_U"
			description="COM_XBFILMS_PERFILT_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_XBFILMS_PERFILT_HINT</option>
		</field>
		<field name="prole"
			type="list"
			default=""
			label="COM_XBFILMS_PROLE_LBL"
			description="COM_XBFILMS_PROLE_DESC"
  			class="btn-group btn-small radiotop"
			showon="perfilt!:"			
		>
  			<option value="" onchange="this.form.submit();">COM_XBFILMS_PROLE_DEF</option>
			<option value="1" onchange="this.form.submit();">XBCULTURE_CAPDIRECTOR</option>
			<option value="2" onchange="this.form.submit();">XBCULTURE_CAPPRODUCER</option>
		</field>	
		<field
			name="charfilt"
			type="characters"
			label="XBCULTURE_CHARACTER_US"
			description="COM_XBFILMS_CHARFILT_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_XBFILMS_PERFILT_HINT</option>
		</field>
		<field
			name="category_id"
			type="catsubtree"
			label="COM_XBFILMS_FILTER_CATEGORY_LBL"
			extension="com_xbfilms"
			itemtype="film"
			published="1"
			description="COM_XBFILMS_FILTER_CATEGORY_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field name="subcats"
			type="radio"
			default=""
			label="COM_XBFILMS_SUBCATS_LBL"
			description="COM_XBFILMS_SUBCATS_DESC"
  			class="btn-group btn-small radiotop"
  			showon="category_id!:"
		>
			<option value="" onchange="this.form.submit();">XBCULTURE_EXCLUDE</option>
			<option value="1" onchange="this.form.submit();">XBCULTURE_INCLUDE</option>
		</field>	
       
		<field
			name="tagfilt"
			type="tag"
			label="COM_XBFILMS_CAPTAGS"
			description="COM_XBFILMS_TAGFILT_DESC"
			multiple="true"
			class="multipleTags"
			mode="ajax"
			onchange="this.form.submit();"
		/>
		<field name="taglogic"
			type="radio"
			default="0"
			label="COM_XBFILMS_MULTITAG_LBL"
			description="COM_XBFILMS_MULTITAG_DESC"
  			class="btn-group btn-small radiotop"
		>
			<option value="1" onchange="this.form.submit();">XBCULTURE_ALL</option>
			<option value="0" onchange="this.form.submit();">XBCULTURE_ANY</option>
			<option value="2" onchange="this.form.submit();">None</option>
		</field>	
				
    </fields>

</form>
